doctype html

mixin breadcrumb(name, link)
  li.breadcrumb-item(class=link ? "" : "active")
    if link
      a(href=link)= name
    else
      span= name

html
  head
    title= title
    block script
      script(type='text/javascript', src='js/bootstrap.min.js')
      script(type='text/javascript', src='jquery.min.jsn')
    block style
      link(rel='stylesheet',href='css/bootstrap.min.css')
  body
    div(class='container')
      div
        ol.breadcrumb
          block breadcrumb
            +breadcrumb("Home", "/")
      block content
